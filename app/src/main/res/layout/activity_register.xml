<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Register">

    <EditText
        android:shadowColor="@color/bg"
        android:textColorHint="@color/bg"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="Masukan Nama Depan"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/nama_depan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:shadowColor="@color/bg"
        android:textColorHint="@color/bg"
        android:hint="Masukan Nama Belakang"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@id/nama_depan"
        android:id="@+id/nama_belakang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:shadowColor="@color/bg"
        android:textColorHint="@color/bg"
        android:hint="Masukan Email "
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@id/nama_belakang"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:shadowColor="@color/bg"
        android:textColorHint="@color/bg"
        android:hint="Masukan Password"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@id/email"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:shadowColor="@color/bg"
        android:id="@+id/btn_submit"
        android:textColor="#fff"
        android:background="@color/bg"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>